<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <ViewFlipper
            android:id="@+id/authorization_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include android:id="@+id/phone_view" layout="@layout/form_auth_phone" />

        <include android:id="@+id/name_view" layout="@layout/form_auth_name" />

        <include android:id="@+id/code_view" layout="@layout/form_auth_code" />

    </ViewFlipper>

</LinearLayout>
